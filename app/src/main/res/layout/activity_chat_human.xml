<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_background">

    <TextView
        android:id="@+id/txt_header_human"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Konselor Human"
        android:textColor="@color/cm_text_primary"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:background="@color/cm_card_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_human_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/txt_header_human"
        app:layout_constraintBottom_toTopOf="@id/layout_input_human"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"/>

    <LinearLayout
        android:id="@+id/layout_input_human"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/cm_card_bg"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_voice_note"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:background="@android:color/transparent"
            android:tint="@color/cm_soft_teal"/>

        <EditText
            android:id="@+id/et_message_human"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input"
            android:hint="Ketik pesan..."
            android:paddingHorizontal="12dp"
            android:layout_marginStart="8dp"/>

        <ImageButton
            android:id="@+id/btn_send_human"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_send"
            android:background="@android:color/transparent"
            android:tint="@color/cm_slate_blue"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_background">

    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo, User ðŸ‘‹"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/cm_slate_blue"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/txt_subtitle_dash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pilih metode konseling yang paling nyaman buat kamu"
        android:textColor="@color/cm_text_secondary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"/>

    <!-- Card AI Chat -->
    <LinearLayout
        android:id="@+id/card_ai_chat"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/cm_card_bg"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/txt_subtitle_dash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Chat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/cm_text_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curhat dulu sama AI konselor"
            android:textColor="@color/cm_text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Card Human Chat -->
    <LinearLayout
        android:id="@+id/card_human_chat"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/cm_card_bg"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_ai_chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Human Chat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/cm_text_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terhubung dengan konselor kampus"
            android:textColor="@color/cm_text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Bottom menu -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/cm_card_bg"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/cm_slate_blue"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="@color/cm_text_secondary"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/cm_text_secondary"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

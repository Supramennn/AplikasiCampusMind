<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cm_bg_light"
    android:padding="12dp">

    <!-- Header AI -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cm_slate_blue"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/cm_slate_blue"
        android:elevation="4dp"
        android:backgroundTintMode="src_in"
        android:clipToPadding="false"
        android:clipToOutline="false"
        android:layout_marginTop="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_ai"
            android:layout_marginRight="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Counselor"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_ai"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <!-- Input Chat -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_message_ai"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Ketik pesan..."
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:textColor="@android:color/black"
            android:textColorHint="#888" />

        <ImageButton
            android:id="@+id/btn_send_ai"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_send"
            android:background="@drawable/bg_round_slate"
            android:tint="@android:color/white"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

</LinearLayout>
